<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/center_refresh"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:visibility="gone" >

    <!-- 为了放在正好中间 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" 
        android:orientation="vertical">
	
        <ImageView
            android:id="@+id/neterror_default_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:scaleType="center"
            android:src="@drawable/btn_reload" />

        <TextView
                android:id="@+id/loading_retry_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:text="当前网络不好"
                android:textColor="#6c6369"
                android:layout_gravity="center_horizontal"
                android:textSize="18sp" />

        <TextView
                android:id="@+id/loading_retry_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dip"
                android:text="点击重新加载"
                android:layout_gravity="center_horizontal"
                android:textColor="#ccc2c9"
                android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>