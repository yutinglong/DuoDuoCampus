<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >
    
   <RelativeLayout
        android:id="@+id/header"
        style="@style/mainHeader" >
        
       <ImageView
            android:id="@+id/iv_slidebar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="8dip"
            android:paddingTop="8dip"
            android:src="@drawable/index_icon_menu" />

        <com.duoduo.duoduocampus.views.HomeTabView
            android:id="@+id/study_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingBottom="6dip"
            android:paddingTop="6dip"
            app:animation="true"
            app:defaultColor="@color/grey_d2"
            app:gapWidth="50dip"
            app:lineBeyond="5dp"
            app:lineColor="@color/pink"
            app:selectColor="@color/pink"
            app:tabTextSize="16sp" />
    </RelativeLayout>

    <com.duoduo.duoduocampus.views.MyViewPager
        android:id="@+id/viewpager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/header"
        android:layout_marginTop="0dip" />

</RelativeLayout>