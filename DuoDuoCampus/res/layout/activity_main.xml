<?xml version="1.0" encoding="UTF-8"?>
<com.duoduo.duoduocampus.profile.views.CustomDrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80737b" >

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@+id/act_container"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/tab_bars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-1dip"
            android:background="@drawable/home_bg_toolbar"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/home_tab1"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/home_icon1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/home_tab_icon_text_interval"
                    android:src="@drawable/home_ico_home_press" />

                <TextView
                    android:id="@+id/home_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="首页"
                    android:textColor="@color/pink_l2"
                    android:textSize="@dimen/home_tab_text_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/home_tab2"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/home_icon2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/home_tab_icon_text_interval"
                    android:src="@drawable/home_ico_home_press" />

                <TextView
                    android:id="@+id/home_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="校园"
                    android:textColor="@color/pink_l2"
                    android:textSize="@dimen/home_tab_text_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/home_tab3"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/home_icon3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/home_tab_icon_text_interval"
                    android:src="@drawable/home_ico_home_press" />

                <TextView
                    android:id="@+id/home_text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_tab3"
                    android:textColor="@color/pink_l2"
                    android:textSize="@dimen/home_tab_text_size" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <com.duoduo.duoduocampus.profile.views.ProfileSlideLayout
        android:id="@+id/layout_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left" />

</com.duoduo.duoduocampus.profile.views.CustomDrawerLayout>