<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mls_layout_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/header"
        style="@style/mainHeader" >

        <TextView
            android:id="@+id/back"
            style="@style/TopBackBtn"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/home_word_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="语文"
            android:textColor="#80737B"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/news_detail_share"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/share_community" />
    </RelativeLayout>

    <View
        android:id="@+id/about_view"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/header" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/about_view"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginTop="5dip"
                android:singleLine="true"
                android:text="作业内容"
                android:textColor="@color/grey"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="@drawable/order_bg_goodsinformation"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/work_content"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="5dp"
                    android:lineSpacingExtra="4dp"
                    android:text="写一个关于父亲的作文，500字以上，请多使用今天做学的语法知识。"
                    android:textColor="@color/grey_d2"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginTop="20dip"
                android:singleLine="true"
                android:text="重点解析"
                android:textColor="@color/grey"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="@drawable/order_bg_goodsinformation"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/work_analysis"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="5dp"
                    android:lineSpacingExtra="4dp"
                    android:text="重点是使用今天教的排比手法。重点是使用今天教的排比手法。重点是使用今天教的排比手法。重点是使用今天教的排比手法。"
                    android:textColor="@color/grey_d2"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginTop="20dip"
                android:singleLine="true"
                android:text="作业点评"
                android:textColor="@color/grey"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="@drawable/order_bg_goodsinformation"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/work_comment"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="5dp"
                    android:lineSpacingExtra="4dp"
                    android:text="写的还不错，结尾出请多使用排比方式。写的还不错，结尾出请多使用排比方式。写的还不错，结尾出请多使用排比方式。写的还不错，结尾出请多使用排比方式。"
                    android:textColor="@color/grey_d2"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>